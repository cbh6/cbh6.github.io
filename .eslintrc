{
  "parser": "babel-eslint",
  "extends": ["standard", "plugin:react/recommended"],
  "rules": {
    "indent": [0, 2],
    "react/react-in-jsx-scope": 0,
    "react/prop-types": 0,
    "react/display-name": 0,
    "space-before-function-paren": 0,
    "no-undef": 0
  },
  "globals": {
    "localStorage": true,
    "fetch": true,
    "test": true,
    "expect": true
  }
}
